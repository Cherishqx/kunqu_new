<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="52dp"
    android:orientation="horizontal"
    android:paddingStart="2dp"
    android:paddingEnd="10dp"
    android:clipToOutline="true"
    android:background="@drawable/mine_rounded_corners"
       >

    <ImageButton
        android:id="@+id/emotion1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/emotion1"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/emotion2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/emotion2"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/emotion3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/emotion3"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/emotion4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/emotion4"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/emotion5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/emotion5"
        android:padding="8dp" />

    <ImageButton
        android:id="@+id/custom_emotion"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/custom_emotion" />

</LinearLayout>